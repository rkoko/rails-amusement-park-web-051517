<h1><%= @user.name %> <% if @user.admin == true%> (ADMIN)<%end%></h1>
<ul>
  <li>
    Tickets: <%= @user.tickets %>
  </li>
  <li>
    Mood: <%= @user.mood %>
  </li>
  <li>
    Height: <%= @user.height %>
  </li>
</ul>

<p>
  <%= link_to "See attractions", attractions_path %>
</p>

<% if @user == current_user || current_user.admin? %>
  <p>
    <%= link_to "Edit User", edit_user_path %>
  </p>
<% end %>

<p>
  <%= link_to "Log Out", signout_path, method: :post %>
</p>
