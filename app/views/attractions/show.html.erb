<h2><%= @attraction.name %></h2>
<ul>
  <li>
    Ticket Cost: <%= @attraction.tickets %>
  </li>
<li>
  Nausea inducing score: <%= @attraction.nausea_rating %>
</li>
<li>
  Happiness inducing score: <%= @attraction.happiness_rating %>
</li>
<li>
  Height requirement (inches): <%= @attraction.min_height %>
</li>

</ul>


<%= link_to "All attractions", attractions_path %>



<% if current_user.admin? %>
  <p>
    <%= link_to "Edit Attraction", edit_attraction_path %>
  </p>
  <p>
    <%= link_to "Delete", @attraction, method: :delete %>
  </p>
<% else %>
  <%= form_tag "/rides" do %>
    <%= hidden_field_tag "attraction_id", @attraction.id %>
    <%= submit_tag "Go on this ride"%>
  <% end %>
<% end %>
